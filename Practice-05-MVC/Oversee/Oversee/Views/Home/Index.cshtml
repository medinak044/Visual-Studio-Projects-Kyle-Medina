@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData["error"]')
    </script>
}

<div @* style="
         height: 100%;
         width: 100%;
         background:url('https://drive.google.com/uc?export=view&id=1clyxf9ViARad93Oo-ytndeP_QBZByVLn');
         background-position: top;
         background-size: cover;
         background-repeat: no-repeat;"
     *@>
    <div class="d-flex h-100 text-center text-bg-dark" style="margin-top: 19rem; margin-bottom: 0rem;">
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
            <main class="px-3">
                <h1>Welcome to Oversee</h1>
                <p class="lead">Keep track of borrowed items with ease. Never forget giving back belongings again!</p>
                @if (SignInManager.IsSignedIn(User))
                {
                    <p class="lead">
                        <a class="btn btn-lg btn-primary fw-bold" asp-area="" asp-controller="User" asp-action="Profile">View profile</a>
                    </p>
                }
                else
                {
                    <p class="lead">
                        <a class="btn btn-lg btn-primary fw-bold" asp-area="" asp-controller="Account" asp-action="Login">Get started now</a>
                    </p>
                }
            </main>
        </div>
    </div>
</div>